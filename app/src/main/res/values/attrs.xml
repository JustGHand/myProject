<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ActivityHeaderView">
        <attr name="title_text" format="string"></attr>
        <attr name="showback" format="boolean"></attr>
        <attr name="showmenu" format="boolean"></attr>
        <attr name="menutext" format="string"></attr>
        <attr name="onMenuClick" format="string"></attr>
    </declare-styleable>

    <declare-styleable name="FlipCard">
        <attr name="flipSpeed" format="integer"></attr>
        <attr name="showFront" format="boolean"></attr>
        <attr name="frontView" format="reference"></attr>
        <attr name="backView" format="reference"></attr>
    </declare-styleable>

    <declare-styleable name="MySeekBar">
        <attr name="seekbarNightmode" format="boolean" />
        <attr name="android:thumb"/>
        <attr name="android:progressDrawable"/>
        <attr name="android:layout_width"/>
        <attr name="progressHight" format="dimension"/>
        <attr name="thumbSize" format="dimension"/>
        <attr name="showProgresstext" format="boolean"/>
        <attr name="showAnchor" format="boolean"/>
        <attr name="anchorSize" format="dimension"/>
        <attr name="anchorDrawable" format="reference"/>
        <attr name="anchorNightDrawable" format="reference"/>
        <attr name="progressDrawableLeftSize" format="dimension"/>
        <attr name="progressDrawableRightSize" format="dimension"/>
        <attr name="progressDrawableLeftMargin" format="dimension"/>
        <attr name="progressDrawableRightMargin" format="dimension"/>
        <attr name="progressDrawableLeft" format="reference"/>
        <attr name="progressDrawableRight" format="reference"/>
        <attr name="progressDrawableLeftNight" format="reference"/>
        <attr name="progressDrawableRightNight" format="reference"/>
    </declare-styleable>

    <declare-styleable name="CustomScrollView">
        <attr name="maxY" format="integer" />
        <attr name="maxX" format="integer" />
        <attr name="validDistance" format="integer" />
    </declare-styleable>

    <declare-styleable name="FastScrollRecyclerView">
        <attr name="fastScrollThumbColor" format="reference|color" />
        <attr name="fastScrollTrackColor" format="reference|color" />
        <attr name="fastScrollPopupBgColor" format="reference|color" />
        <attr name="fastScrollPopupTextColor" format="reference|color" />
        <attr name="fastScrollPopupTextSize" format="reference|dimension" />
        <attr name="fastScrollPopupBackgroundSize" format="reference|dimension" />
        <attr name="fastScrollPopupPosition" format="enum">
            <enum name="adjacent" value="0"/>
            <enum name="center" value="1"/>
        </attr>
        <attr name="fastScrollAutoHide" format="reference|boolean" />
        <attr name="fastScrollAutoHideDelay" format="reference|integer" />
        <attr name="fastScrollThumbInactiveColor" format="reference|boolean" />
        <attr name="fastScrollThumbDrawable" format="reference" />
    </declare-styleable>



    <!--自动换行Linearlayout-->
    <declare-styleable name="WarpLinearLayout">
        <attr name="grivate" format="enum"><!--对齐方式 !-->
            <enum name="right" value="0"></enum>
            <enum name="left" value="1"></enum>
            <enum name="center" value="2"></enum>
        </attr>
        <attr name="horizontal_Space" format="dimension"></attr>
        <attr name="vertical_Space" format="dimension"></attr>
        <attr name="isFull" format="boolean"></attr>
        <attr name="maxLines" format="integer"></attr><!--  0表示无限制-->
        <attr name="expandviewId" format="reference"></attr>
    </declare-styleable>
</resources>