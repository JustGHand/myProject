<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TableLayout
        android:id="@+id/sudoku_table"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            />

        <include
            android:id="@+id/sudoku_table_row_1"
            layout="@layout/view_sudoku_line"/>
        <include
            android:id="@+id/sudoku_table_row_2"
            layout="@layout/view_sudoku_line"/>
        <include
            android:id="@+id/sudoku_table_row_3"
            layout="@layout/view_sudoku_line"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            />
        <include
            android:id="@+id/sudoku_table_row_4"
            layout="@layout/view_sudoku_line"/>
        <include
            android:id="@+id/sudoku_table_row_5"
            layout="@layout/view_sudoku_line"/>
        <include
            android:id="@+id/sudoku_table_row_6"
            layout="@layout/view_sudoku_line"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            />
        <include
            android:id="@+id/sudoku_table_row_7"
            layout="@layout/view_sudoku_line"/>
        <include
            android:id="@+id/sudoku_table_row_8"
            layout="@layout/view_sudoku_line"/>
        <include
            android:id="@+id/sudoku_table_row_9"
            layout="@layout/view_sudoku_line"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            />
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>