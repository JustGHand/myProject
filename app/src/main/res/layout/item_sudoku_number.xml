<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/sudoku_back"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="2dp"
        android:background="@color/theme_color"
        android:visibility="invisible"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sudoku_number_probable_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="4dp"
        android:background="@color/selector_white_gray"
        >
        <TextView
            android:id="@+id/sudoku_number_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="1"
            android:gravity="center"
            android:textSize="10sp"
            app:layout_constraintDimensionRatio="h,1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/sudoku_number_2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/sudoku_number_4"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/sudoku_number_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="2"
            android:gravity="center"
            android:textSize="10sp"
            app:layout_constraintDimensionRatio="h,1:1"
            app:layout_constraintStart_toEndOf="@id/sudoku_number_1"
            app:layout_constraintEnd_toStartOf="@id/sudoku_number_3"
            app:layout_constraintTop_toTopOf="@id/sudoku_number_1"
            app:layout_constraintBottom_toBottomOf="@id/sudoku_number_1"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/sudoku_number_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="3"
            android:gravity="center"
            android:textSize="10sp"
            app:layout_constraintDimensionRatio="h,1:1"
            app:layout_constraintStart_toEndOf="@id/sudoku_number_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/sudoku_number_2"
            app:layout_constraintBottom_toBottomOf="@id/sudoku_number_2"
            android:visibility="invisible"
            />
        <TextView
            android:id="@+id/sudoku_number_4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="4"
            android:gravity="center"
            android:textSize="10sp"
            app:layout_constraintDimensionRatio="h,1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/sudoku_number_2"
            app:layout_constraintTop_toBottomOf="@id/sudoku_number_1"
            app:layout_constraintBottom_toTopOf="@id/sudoku_number_7"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/sudoku_number_5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="5"
            android:gravity="center"
            android:textSize="10sp"
            app:layout_constraintDimensionRatio="h,1:1"
            app:layout_constraintStart_toEndOf="@id/sudoku_number_4"
            app:layout_constraintEnd_toStartOf="@id/sudoku_number_6"
            app:layout_constraintTop_toTopOf="@id/sudoku_number_4"
            app:layout_constraintBottom_toBottomOf="@id/sudoku_number_4"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/sudoku_number_6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="6"
            android:gravity="center"
            android:textSize="10sp"
            app:layout_constraintDimensionRatio="h,1:1"
            app:layout_constraintStart_toEndOf="@id/sudoku_number_5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/sudoku_number_5"
            app:layout_constraintBottom_toBottomOf="@id/sudoku_number_5"
            android:visibility="invisible"
            />
        <TextView
            android:id="@+id/sudoku_number_7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="7"
            android:gravity="center"
            android:textSize="10sp"
            app:layout_constraintDimensionRatio="h,1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/sudoku_number_2"
            app:layout_constraintTop_toBottomOf="@id/sudoku_number_4"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/sudoku_number_8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="8"
            android:gravity="center"
            android:textSize="10sp"
            app:layout_constraintDimensionRatio="h,1:1"
            app:layout_constraintStart_toEndOf="@id/sudoku_number_7"
            app:layout_constraintEnd_toStartOf="@id/sudoku_number_9"
            app:layout_constraintTop_toTopOf="@id/sudoku_number_7"
            app:layout_constraintBottom_toBottomOf="@id/sudoku_number_7"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/sudoku_number_9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="9"
            android:gravity="center"
            android:textSize="10sp"
            app:layout_constraintDimensionRatio="h,1:1"
            app:layout_constraintStart_toEndOf="@id/sudoku_number_8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/sudoku_number_8"
            app:layout_constraintBottom_toBottomOf="@id/sudoku_number_8"
            android:visibility="invisible"
            />
        
    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/sudoku_number"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="-"
        android:gravity="center"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="25sp"
        android:autoSizeMaxTextSize="45sp"
        android:textStyle="bold"
        android:background="@color/selector_white_gray"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="4dp"
        />

    <View
        android:layout_width="0dp"
        android:layout_height="1px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/black"
        />

    <View
        android:layout_width="0dp"
        android:layout_height="1px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/black"
        />
    <View
        android:layout_width="1px"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/black"
        />

    <View
        android:layout_width="1px"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/black"
        />
    <View
        android:id="@+id/top_border"
        android:layout_width="0dp"
        android:layout_height="4px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/black"
        android:visibility="gone"
        />

    <View
        android:id="@+id/bottom_border"
        android:layout_width="0dp"
        android:layout_height="4px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/black"
        android:visibility="gone"
        />
    <View
        android:id="@+id/left_border"
        android:layout_width="4px"
        android:layout_height="0px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/black"
        android:visibility="gone"
        />

    <View
        android:id="@+id/right_border"
        android:layout_width="4px"
        android:layout_height="0px"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/black"
        android:visibility="gone"
        />
</androidx.constraintlayout.widget.ConstraintLayout>