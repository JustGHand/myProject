<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">>

    <com.pw.codeset.weidgt.ActivityHeaderView
        android:id="@+id/activity_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:menutext="@string/iconfont_refresh"
        app:showmenu="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside"/>

    <Button
        android:id="@+id/sudoku_start_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_header"
        android:onClick="play"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sudoku_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sudoku_start_btn"
        app:layout_constraintBottom_toTopOf="@id/sudoku_number_btn_1"
        android:layout_marginLeft="@dimen/view_defaultmargin"
        android:layout_marginRight="@dimen/view_defaultmargin"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/sudoku_center_guide_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

    <Button
        android:id="@+id/sudoku_number_btn_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="1"
        android:tag="1"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/sudoku_number_btn_2"
        app:layout_constraintBottom_toTopOf="@id/sudoku_number_btn_4"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:onClick="numberClick"
        />
    <Button
        android:id="@+id/sudoku_number_btn_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="2"
        android:tag="2"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintStart_toEndOf="@id/sudoku_number_btn_1"
        app:layout_constraintTop_toTopOf="@id/sudoku_number_btn_1"
        app:layout_constraintBottom_toBottomOf="@id/sudoku_number_btn_1"
        app:layout_constraintEnd_toStartOf="@id/sudoku_number_btn_3"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:onClick="numberClick"
        />
    <Button
        android:id="@+id/sudoku_number_btn_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="3"
        android:tag="3"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintStart_toEndOf="@id/sudoku_number_btn_2"
        app:layout_constraintTop_toTopOf="@id/sudoku_number_btn_2"
        app:layout_constraintBottom_toBottomOf="@id/sudoku_number_btn_2"
        app:layout_constraintEnd_toEndOf="@id/sudoku_center_guide_line"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:onClick="numberClick"
        />
    <Button
        android:id="@+id/sudoku_number_btn_4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="4"
        android:tag="4"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/sudoku_number_btn_5"
        app:layout_constraintBottom_toTopOf="@id/sudoku_number_btn_7"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:onClick="numberClick"
        />
    <Button
        android:id="@+id/sudoku_number_btn_5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="5"
        android:tag="5"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintStart_toEndOf="@id/sudoku_number_btn_4"
        app:layout_constraintTop_toTopOf="@id/sudoku_number_btn_4"
        app:layout_constraintBottom_toBottomOf="@id/sudoku_number_btn_4"
        app:layout_constraintEnd_toStartOf="@id/sudoku_number_btn_6"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:onClick="numberClick"
        />
    <Button
        android:id="@+id/sudoku_number_btn_6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="6"
        android:tag="6"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintStart_toEndOf="@id/sudoku_number_btn_5"
        app:layout_constraintTop_toTopOf="@id/sudoku_number_btn_5"
        app:layout_constraintBottom_toBottomOf="@id/sudoku_number_btn_5"
        app:layout_constraintEnd_toEndOf="@id/sudoku_center_guide_line"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:onClick="numberClick"
        />
    <Button
        android:id="@+id/sudoku_number_btn_7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="7"
        android:tag="7"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/sudoku_number_btn_8"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:onClick="numberClick"
        />
    <Button
        android:id="@+id/sudoku_number_btn_8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="8"
        android:tag="8"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintStart_toEndOf="@id/sudoku_number_btn_7"
        app:layout_constraintTop_toTopOf="@id/sudoku_number_btn_7"
        app:layout_constraintBottom_toBottomOf="@id/sudoku_number_btn_7"
        app:layout_constraintEnd_toStartOf="@id/sudoku_number_btn_9"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:onClick="numberClick"
        />

    <Button
        android:id="@+id/sudoku_number_btn_9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="9"
        android:tag="9"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintStart_toEndOf="@id/sudoku_number_btn_8"
        app:layout_constraintTop_toTopOf="@id/sudoku_number_btn_8"
        app:layout_constraintBottom_toBottomOf="@id/sudoku_number_btn_8"
        app:layout_constraintEnd_toEndOf="@id/sudoku_center_guide_line"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:onClick="numberClick"
        />



    <com.pw.codeset.weidgt.IconImageButton
        android:id="@+id/sudoku_btn_back"
        android:layout_width="@dimen/clickable_minsize"
        android:layout_height="@dimen/clickable_minsize"
        android:text="&#xe601;"
        app:layout_constraintStart_toStartOf="@id/sudoku_center_guide_line"
        app:layout_constraintTop_toTopOf="@id/sudoku_number_btn_1"
        app:layout_constraintBottom_toTopOf="@id/sudoku_btn_clear"
        app:layout_constraintEnd_toStartOf="@id/sudoku_btn_edit"
        android:backgroundTint="@color/selector_btn_color_t_b"
        />


    <com.pw.codeset.weidgt.IconImageButton
        android:id="@+id/sudoku_btn_prev"
        android:layout_width="@dimen/clickable_minsize"
        android:layout_height="@dimen/clickable_minsize"
        android:text="&#xe675;"
        app:layout_constraintStart_toEndOf="@id/sudoku_btn_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/sudoku_btn_back"
        app:layout_constraintBottom_toBottomOf="@id/sudoku_btn_back"
        android:backgroundTint="@color/selector_btn_color_t_b"
        />


    <com.pw.codeset.weidgt.IconImageButton
        android:id="@+id/sudoku_btn_clear"
        android:layout_width="@dimen/clickable_minsize"
        android:layout_height="@dimen/clickable_minsize"
        android:text="&#xe900;"
        app:layout_constraintStart_toStartOf="@id/sudoku_center_guide_line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sudoku_btn_back"
        app:layout_constraintEnd_toStartOf="@id/sudoku_btn_edit"
        android:onClick="clear"
        android:backgroundTint="@color/selector_btn_color_t_b"
        />

    <com.pw.codeset.weidgt.IconImageButton
        android:id="@+id/sudoku_btn_edit"
        android:layout_width="@dimen/clickable_minsize"
        android:layout_height="@dimen/clickable_minsize"
        android:text="&#xe74b;"
        app:layout_constraintStart_toEndOf="@id/sudoku_btn_clear"
        app:layout_constraintTop_toTopOf="@id/sudoku_btn_clear"
        app:layout_constraintBottom_toBottomOf="@id/sudoku_btn_clear"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/selector_btn_color_t_b"
        android:onClick="edit"
        />
</androidx.constraintlayout.widget.ConstraintLayout>